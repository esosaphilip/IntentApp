<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Android_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="AndroidIntentLearnApp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BIntent"
        android:layout_width="255dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:text="Basic Intent"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Android_intent" />

    <TextView
        android:id="@+id/CIntent"
        android:layout_width="287dp"
        android:layout_height="44dp"
        android:layout_marginBottom="141dp"
        android:text="Common Intent"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bon3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buon2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buton1"
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginBottom="48dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/buon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buon2"
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:layout_marginBottom="184dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/bon3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bon3"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="176dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bn4"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bn4"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="176dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buon2"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>